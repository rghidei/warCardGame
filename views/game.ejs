<!doctype html>
<html>
<head>
  <title>Card Game</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="style.css">
</head>

<body>
  <div class="container">
    <div class="page-header text-center">
      <h1><span class="fa fa-heart"></span>Play War Game</h1>
      <button type="submit" name="button" id="flip">Draw</button>
      <button type="button" name="button" id="reset">Play Again</button>
      <a href="/profile" class="btn btn-default"><span class="fa fa-user"></span>Profile</a>
      <a href="/login" class="btn btn-default"><span class="fa fa-user"></span>Logout</a>
    </div>
    <div id="board">
      <div class="col-sm-6">
        <h3>Player One</h3>
        <strong>Deck: </strong><span id="p1D"></span>
        <div id="player1">
        <img src="" alt="">
        </div>
      </div>
      <div class="col-sm-6">
        <h3>Robot</h3>
        <strong>Deck: </strong><span id="p2D"></span>
        <div id="player2">
        <img src="" alt="">
        </div>
      </div>
      <div class="col-sm-6">
        <h3>Scores</h3>
        <strong>P1: </strong> <span id="p1Wins"></span>
        <strong>P2: </strong><span id="p2Wins"></span>
        <h3 id="msg2"></h3>
      </div>
      <div class="col-sm-6">
        <h3>Status</h3>
        <strong>How many Rounds: </strong><h3 id="rounds"></h3>
        <strong>Current Round: </strong><h2 id="msg1"></h2>
        <img id="imgP1" src="" alt="">
        <img id="imgP2" src="" alt="">
        <img src="" alt="">
        <h3 id="msg2"></h3>
      <strong>Go To War</strong><h3 id="msg3"></h3>
      </div>
    </div>

    <script src="main.js"></script>

</body>
</html>
